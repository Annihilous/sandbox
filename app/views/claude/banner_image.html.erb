<%= content_for :head do %>
  <style>
    .banner {
      width: 1584px;
      height: 396px;
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
      position: relative;
      overflow: hidden;
      margin: 0 auto;
      border-radius: 8px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }
    
    .network-bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0.15;
      background-image: 
        radial-gradient(circle at 20% 30%, rgba(59, 130, 246, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(34, 197, 94, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 60% 20%, rgba(168, 85, 247, 0.3) 0%, transparent 50%);
    }
    
    .grid-pattern {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: 
        linear-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(59, 130, 246, 0.1) 1px, transparent 1px);
      background-size: 40px 40px;
      animation: gridShift 20s linear infinite;
    }
    
    @keyframes gridShift {
      0% { transform: translate(0, 0); }
      100% { transform: translate(40px, 40px); }
    }
    
    .content {
      position: relative;
      z-index: 10;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: flex-end;
      padding: 0 80px;
    }
    
    .visual-elements {
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
    }
    
    .tech-circles {
      position: relative;
      width: 300px;
      height: 300px;
    }
    
    .circle {
      position: absolute;
      border-radius: 50%;
      border: 2px solid;
      animation: rotate 10s linear infinite;
    }
    
    .circle-1 {
      width: 200px;
      height: 200px;
      top: 50px;
      left: 50px;
      border-color: rgba(59, 130, 246, 0.4);
      animation-duration: 15s;
    }
    
    .circle-2 {
      width: 120px;
      height: 120px;
      top: 90px;
      left: 90px;
      border-color: rgba(34, 197, 94, 0.4);
      animation-duration: 12s;
      animation-direction: reverse;
    }
    
    .circle-3 {
      width: 60px;
      height: 60px;
      top: 120px;
      left: 120px;
      border-color: rgba(168, 85, 247, 0.4);
      animation-duration: 8s;
    }
    
    @keyframes rotate {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }
    
    .data-nodes {
      position: absolute;
      width: 100%;
      height: 100%;
    }
    
    .node {
      position: absolute;
      width: 8px;
      height: 8px;
      background: #60a5fa;
      border-radius: 50%;
      animation: pulse 2s ease-in-out infinite;
    }
    
    .node:nth-child(1) {
      top: 20%;
      left: 30%;
      background: #4ade80;
    }
    
    .node:nth-child(2) {
      top: 70%;
      left: 20%;
      background: #a855f7;
      animation-delay: 0.7s;
    }
    
    .node:nth-child(3) {
      top: 80%;
      left: 80%;
      background: #f59e0b;
      animation-delay: 1.4s;
    }
    
    .node:nth-child(4) {
      top: 30%;
      left: 85%;
      background: #ef4444;
      animation-delay: 0.3s;
    }
    
    @keyframes pulse {
      0%, 100% { 
        transform: scale(1);
        box-shadow: 0 0 5px currentColor;
      }
      50% { 
        transform: scale(1.5);
        box-shadow: 0 0 15px currentColor;
      }
    }
    
    .connecting-lines {
      position: absolute;
      width: 100%;
      height: 100%;
      z-index: 1;
    }
    
    .line {
      position: absolute;
      background: linear-gradient(90deg, rgba(59, 130, 246, 0.3), rgba(34, 197, 94, 0.3));
      height: 1px;
      animation: dataFlow 4s ease-in-out infinite;
    }
    
    .line-1 {
      top: 25%;
      left: 30%;
      width: 200px;
      transform: rotate(25deg);
    }
    
    .line-2 {
      top: 60%;
      left: 20%;
      width: 150px;
      transform: rotate(-15deg);
      animation-delay: 1s;
    }
    
    .line-3 {
      top: 40%;
      left: 60%;
      width: 120px;
      transform: rotate(45deg);
      animation-delay: 2s;
    }
    
    @keyframes dataFlow {
      0% { opacity: 0.3; }
      50% { opacity: 0.8; }
      100% { opacity: 0.3; }
    }
  </style>
<% end %>

<div class="banner">
  <div class="network-bg"></div>
  <div class="grid-pattern"></div>
  
  <div class="content">
    <div class="visual-elements">
      <div class="tech-circles">
        <div class="circle circle-1"></div>
        <div class="circle circle-2"></div>
        <div class="circle circle-3"></div>
      </div>
      
      <div class="connecting-lines">
        <div class="line line-1"></div>
        <div class="line line-2"></div>
        <div class="line line-3"></div>
      </div>
      
      <div class="data-nodes">
        <div class="node"></div>
        <div class="node"></div>
        <div class="node"></div>
        <div class="node"></div>
      </div>
    </div>
  </div>
</div>
